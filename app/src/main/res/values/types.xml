<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/lato_light</item>
        <item name="android:background">@drawable/bg_bottom_nav</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Widget.SearchView" parent="Widget.AppCompat.SearchView">

        <item name="searchIcon">@drawable/ic_search_view</item>
        <item name="queryBackground">@null</item>
        <item name="android:background">@drawable/bg_search_view</item>
        <item name="searchHintIcon">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="closeIcon">@drawable/ic_close_search_view</item>
        <item name="android:textColorHint">@color/grey_light</item>
    </style>

    <style name="ProgressbarStyle" parent="Widget.AppCompat.RatingBar.Small">>
        <item name="android:progressTint">@color/deep_purple_700</item>
        <item name="android:progressBackgroundTint">@color/deep_purple_500</item>
    </style>
</resources>